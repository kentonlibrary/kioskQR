{
  "manifest_version": 2,
  "name": "fxqrl",
  "version": "1.1",
  "description": "Generate QR code from URL",
  "homepage_url": "https://github.com/xeonchen/fxqrl",
  "icons": {
    "16": "icons/fxqrl-16.png",
    "32": "icons/fxqrl-32.png",
    "64": "icons/fxqrl-64.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/fxqrl-16.png",
      "32": "icons/fxqrl-32.png",
      "64": "icons/fxqrl-64.png"
    },
    "default_title": "fxqrl",
    "default_popup": "popup/fxqrl.html"
  },

  "options_ui": {
    "page": "settings/options.html"
  }
}
